{
	"name": "@kontent-ai/core-sdk",
	"version": "10.10.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/kontent-ai/kontent-core-js"
	},
	"private": false,
	"author": "richard sustek",
	"license": "MIT",
	"description": "Core package with shared / common functionality for Kontent.ai SDKs",
	"keywords": ["Kontent.ai", "Kontent AI", "Kontent SDK Core"],
	"engines": {
		"node": ">= 22"
	},
	"exports": {
		".": {
      		"types": "./dist/public_api.d.ts",
      		"default": "./dist/public_api.js"
    	},
    	"./devkit": {
      		"types": "./dist/devkit_api.d.ts",
      		"default": "./dist/devkit_api.js"
    	}
	},
	"type": "module",
	"scripts": {
		"release": "standard-version",
		"release:major": "standard-version --release-as major",
		"prerelease": "standard-version --prerelease",
		"prerelease:major": "standard-version --prerelease --release-as major",
		"prepublishOnly": "npm run build && npm run push:tags",
		"publish:beta": "npm publish --tag=next",
		"build": "npm run clean && npm run lint:fix && tsc --p tsconfig.build.json && npm run update:version",
		"test": "vitest run --config=vitest.config.ts",
		"format": "biome format --write",
		"lint": "biome lint",
		"lint:fix": "biome lint --fix --unsafe",
		"clean": "tsx scripts/clean.ts",
		"push:tags": "git push --tags",
		"update:version": "tsx ./scripts/update-version.ts"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/node": "22.15.17",
		"chalk": "5.4.1",
		"standard-version": "9.5.0",
		"typescript": "5.8.3",
		"vitest": "3.1.3",
		"dotenv-cli": "8.0.0",
		"tsx": "4.19.4"
	}
}
