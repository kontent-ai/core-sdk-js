{
	"compileOnSave": true,
	"compilerOptions": {
		// Language + runtime environment
		"target": "es2022",
		"lib": ["esnext"],

		// Modules + resolution
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,

		// Emit behavior (even if `noEmit` is true, these are useful for tooling expectations)
		"noEmit": true,
		"declaration": true,
		"sourceMap": true,

		// Strictness + type safety
		"strict": true,
		"alwaysStrict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,

		// Lint-like correctness checks
		"noImplicitReturns": true,
		"allowUnreachableCode": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"forceConsistentCasingInFileNames": true,

		// Perf / compatibility
		"skipLibCheck": true,
		"typeRoots": ["./node_modules/@types"]
	},
	"include": ["lib/**/*", "tests/**/*", "scripts/**/*", "eslint.config.mjs", "vitest-unit.config.ts", "vitest-integration.config.ts"],
	"exclude": ["node_modules"]
}
